<% layout("layouts/boilerplate") %>

<div class="container mt-4">
  <div class="row">
    <!-- Booking Details -->
    <div class="col-lg-8">
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h3 class="card-title mb-4">Booking Details</h3>
          
          <div class="row mb-4">
            <div class="col-md-6">
              <h5 class="mb-3">Trip Details</h5>
              <p class="mb-2">
                <i class="far fa-calendar-alt me-2"></i>
                <strong>Check-in:</strong> <%= new Date(booking.checkIn).toLocaleDateString() %>
              </p>
              <p class="mb-2">
                <i class="far fa-calendar-alt me-2"></i>
                <strong>Check-out:</strong> <%= new Date(booking.checkOut).toLocaleDateString() %>
              </p>
              <p class="mb-2">
                <i class="fas fa-users me-2"></i>
                <strong>Guests:</strong> <%= booking.guests %> <%= booking.guests === 1 ? 'guest' : 'guests' %>
              </p>
              <p class="mb-0">
                <i class="fas fa-rupee-sign me-2"></i>
                <strong>Total Price:</strong> ₹<%= booking.totalPrice.toLocaleString('en-IN') %>
              </p>
            </div>
            
            <div class="col-md-6">
              <h5 class="mb-3">Status</h5>
              <p class="mb-2">
                <span class="badge <%= booking.status === 'confirmed' ? 'bg-success' : 
                                   booking.status === 'pending' ? 'bg-warning' : 
                                   booking.status === 'cancelled' ? 'bg-danger' : 'bg-secondary' %> fs-6">
                  <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                </span>
              </p>
              <p class="mb-2">
                <i class="fas fa-credit-card me-2"></i>
                <strong>Payment Status:</strong> 
                <span class="badge <%= booking.paymentStatus === 'completed' ? 'bg-success' : 
                                   booking.paymentStatus === 'pending' ? 'bg-warning' : 
                                   booking.paymentStatus === 'failed' ? 'bg-danger' : 'bg-secondary' %>">
                  <%= booking.paymentStatus.charAt(0).toUpperCase() + booking.paymentStatus.slice(1) %>
                </span>
              </p>
              <p class="mb-0">
                <i class="far fa-clock me-2"></i>
                <strong>Booked on:</strong> <%= new Date(booking.createdAt).toLocaleDateString() %>
              </p>
            </div>
          </div>

          <% if(booking.specialRequests) { %>
            <div class="mb-4">
              <h5>Special Requests</h5>
              <p class="mb-0"><%= booking.specialRequests %></p>
            </div>
          <% } %>

          <!-- Host Actions -->
          <% if(currentUser && currentUser._id.equals(booking.listing.owner._id)) { %>
            <% if(booking.status === 'pending') { %>
              <div class="d-flex gap-2">
                <form action="/bookings/<%= booking._id %>/status?_method=PUT" method="POST">
                  <input type="hidden" name="status" value="confirmed">
                  <button type="submit" class="btn btn-success">
                    <i class="fas fa-check me-2"></i>Confirm Booking
                  </button>
                </form>
                <form action="/bookings/<%= booking._id %>/status?_method=PUT" method="POST">
                  <input type="hidden" name="status" value="cancelled">
                  <button type="submit" class="btn btn-danger" 
                          onclick="return confirm('Are you sure you want to reject this booking?')">
                    <i class="fas fa-times me-2"></i>Reject Booking
                  </button>
                </form>
              </div>
            <% } %>
          <% } %>

          <!-- Guest Actions -->
          <% if(currentUser && currentUser._id.equals(booking.guest._id)) { %>
            <% if(booking.status === 'pending' || booking.status === 'confirmed') { %>
              <form action="/bookings/<%= booking._id %>/cancel?_method=PUT" method="POST" class="mt-3">
                <button type="submit" class="btn btn-danger" 
                        onclick="return confirm('Are you sure you want to cancel this booking?')">
                  <i class="fas fa-ban me-2"></i>Cancel Booking
                </button>
              </form>
            <% } %>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Listing Details -->
    <div class="col-lg-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Listing Details</h5>
          
          <% if(booking.listing.images && booking.listing.images.length > 0) { %>
            <img src="<%= booking.listing.images[0].url %>" class="card-img-top mb-3" alt="<%= booking.listing.title %>" style="height: 200px; object-fit: cover;">
          <% } %>
          
          <h6 class="card-subtitle mb-2">
            <a href="/listings/<%= booking.listing._id %>" class="text-decoration-none">
              <%= booking.listing.title %>
            </a>
          </h6>
          
          <p class="card-text text-muted mb-3">
            <i class="fas fa-map-marker-alt me-2"></i><%= booking.listing.location %>
          </p>
          
          <div class="mb-3">
            <p class="mb-1">
              <i class="fas fa-bed me-2"></i><%= booking.listing.bedrooms %> bedrooms
            </p>
            <p class="mb-1">
              <i class="fas fa-bath me-2"></i><%= booking.listing.bathrooms %> bathrooms
            </p>
            <p class="mb-0">
              <i class="fas fa-users me-2"></i>Up to <%= booking.listing.maxGuests %> guests
            </p>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <div>
              <p class="mb-0 fw-bold">₹<%= booking.listing.price.toLocaleString('en-IN') %></p>
              <p class="mb-0 text-muted" style="font-size: 0.9rem;">per night</p>
            </div>
            <a href="/listings/<%= booking.listing._id %>" class="btn btn-outline-primary">
              View Listing
            </a>
          </div>
        </div>
      </div>

      <!-- Host/Guest Info -->
      <div class="card shadow-sm mt-4">
        <div class="card-body">
          <h5 class="card-title mb-3">
            <% if(currentUser && currentUser._id.equals(booking.guest._id)) { %>
              Host Information
            <% } else { %>
              Guest Information
            <% } %>
          </h5>
          
          <% const user = currentUser && currentUser._id.equals(booking.guest._id) ? booking.listing.owner : booking.guest %>
          
          <div class="d-flex align-items-center mb-3">
            <% if(user.profileImage && user.profileImage.url) { %>
              <img src="<%= user.profileImage.url %>" alt="<%= user.username %>" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;">
            <% } else { %>
              <div class="rounded-circle bg-secondary me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                <i class="fas fa-user text-white"></i>
              </div>
            <% } %>
            
            <div>
              <h6 class="mb-0"><%= user.firstName %> <%= user.lastName %></h6>
              <p class="mb-0 text-muted" style="font-size: 0.9rem;">Member since <%= new Date(user.createdAt).getFullYear() %></p>
            </div>
          </div>

          <% if(user.phoneNumber) { %>
            <p class="mb-1">
              <i class="fas fa-phone me-2"></i><%= user.phoneNumber %>
            </p>
          <% } %>
          
          <p class="mb-0">
            <i class="fas fa-envelope me-2"></i><%= user.email %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div> 