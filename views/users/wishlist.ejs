<% layout('layouts/boilerplate') %>

<div class="container mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold text-dark mb-1">
                        <i class="fas fa-heart text-danger me-2"></i>My Wishlist
                    </h2>
                    <p class="text-muted mb-0">Your saved properties</p>
                </div>
                <div>
                    <a href="/listings" class="btn btn-outline-primary">
                        <i class="fas fa-plus me-2"></i>Browse More
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            
            <% if (listings.length === 0) { %>
                <div class="text-center py-5">
                    <i class="fas fa-heart fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Your wishlist is empty</h4>
                    <p class="text-muted">Start exploring and add your favorite listings!</p>
                    <a href="/listings" class="btn btn-primary">Browse Listings</a>
                </div>
            <% } else { %>
                <div class="row">
                    <% listings.forEach(listing => { %>
                        <div class="col-md-4 mb-4">
                            <div class="card listing-card h-100 shadow-sm">
                                <div class="position-relative">
                                    <% if (listing.images && listing.images.length > 0) { %>
                                        <img src="<%= listing.images[0].url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 220px; object-fit: cover;">
                                    <% } else { %>
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 220px;">
                                            <i class="fas fa-home fa-3x text-muted"></i>
                                        </div>
                                    <% } %>
                                    
                                    <!-- In Wishlist Badge -->
                                    <span class="position-absolute top-0 start-0 m-2 badge bg-danger">
                                        <i class="fas fa-heart me-1"></i>Saved
                                    </span>
                                    
                                    <!-- Category Badge -->
                                    <span class="position-absolute top-0 end-0 m-2 badge bg-primary">
                                        <%= listing.category %>
                                    </span>
                                </div>
                                
                                <div class="card-body p-3">
                                    <h6 class="card-title mb-2 fw-bold"><%= listing.title %></h6>
                                    <p class="card-text mb-2 text-muted small">
                                        <i class="fas fa-map-marker-alt me-1"></i><%= listing.location %>, <%= listing.country %>
                                    </p>
                                    
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="text-muted small">
                                            <i class="fas fa-users me-1"></i><%= listing.maxGuests %> guests
                                            <i class="fas fa-bed ms-2 me-1"></i><%= listing.bedrooms %> bed
                                        </div>
                                        <% if(listing.rating > 0) { %>
                                            <div class="rating-stars small">
                                                <i class="fas fa-star"></i> <%= listing.rating.toFixed(1) %>
                                            </div>
                                        <% } %>
                                    </div>
                                    
                                    <p class="card-text mb-3">
                                        <small class="text-muted"><%= listing.description.substring(0, 80) %>...</small>
                                    </p>
                                    
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="price-badge">
                                            â‚¹<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
                                        </div>
                                        <div>
                                            <a href="/listings/<%= listing._id %>" class="btn btn-primary btn-sm me-2">
                                                <i class="fas fa-eye me-1"></i>View
                                            </a>
                                            <form action="/wishlist/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Remove from wishlist">
                                                    <i class="fas fa-heart-broken"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </div>
</div>

