<% layout("layouts/boilerplate") %>
<body style="background-color: #f8f9fa; font-family: 'Segoe UI', sans-serif;">
  <div class="container mt-5">
    <!-- Heading -->
    <div class="row mb-4">
      <div class="col text-center">
        <h3>Listing Details</h3>
      </div>
    </div>

    <!-- Card -->
    <div class="row justify-content-center">
      <div class="card border-0" style="border-radius: 20px; max-width: 600px;">
        <!-- Image -->
        <img src="<%= listing.image.url %>" alt="Listing Image" class="card-img-top" style="border-top-left-radius: 20px; border-top-right-radius: 20px; object-fit: cover; max-height: 300px;">

        <!-- Content -->
        <div class="card-body px-4 py-3">
          <h5 class="card-title fw-bold mb-2"><%= listing.title %></h5>
          <p class="card-text mb-2" style="color: #444;"><%= listing.description %></p>
          <p class="card-text mb-2"><b>â‚¹<%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %></b></p>
          <p class="card-text"><%= listing.location %><br><%= listing.country %></p>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-center gap-3 pb-4">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger px-4">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark px-4">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
