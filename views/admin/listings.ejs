<% layout("/layouts/boilerplate") %>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-home"></i> Manage Listings</h1>
                <div>
                    <a href="/admin" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                    <a href="/admin/listings/new" class="btn btn-success">
                        <i class="fas fa-plus"></i> Add New Listing
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form method="GET" action="/admin/listings">
                        <div class="row">
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="search" 
                                       placeholder="Search listings..." 
                                       value="<%= currentFilters.search || '' %>">
                            </div>
                            <div class="col-md-2">
                                <select class="form-control" name="category">
                                    <option value="">All Categories</option>
                                    <% categories.forEach(category => { %>
                                        <option value="<%= category %>" 
                                                <%= currentFilters.category === category ? 'selected' : '' %>>
                                            <%= category %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select class="form-control" name="status">
                                    <option value="">All Status</option>
                                    <option value="available" <%= currentFilters.status === 'available' ? 'selected' : '' %>>
                                        Available
                                    </option>
                                    <option value="unavailable" <%= currentFilters.status === 'unavailable' ? 'selected' : '' %>>
                                        Unavailable
                                    </option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Filter
                                </button>
                                <a href="/admin/listings" class="btn btn-outline-secondary">
                                    <i class="fas fa-times"></i> Clear
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Listings Table -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <% if (listings.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Owner</th>
                                        <th>Category</th>
                                        <th>Location</th>
                                        <th>Price</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% listings.forEach(listing => { %>
                                        <tr>
                                            <td>
                                                <strong><%= listing.title %></strong>
                                                <br>
                                                <small class="text-muted">
                                                    <%= listing.description.substring(0, 50) %>...
                                                </small>
                                            </td>
                                            <td><%= listing.owner.username %></td>
                                            <td>
                                                <span class="badge badge-info"><%= listing.category %></span>
                                            </td>
                                            <td><%= listing.location %>, <%= listing.country %></td>
                                            <td>â‚¹<%= listing.price %>/night</td>
                                            <td>
                                                <span class="badge badge-<%= listing.isAvailable ? 'success' : 'danger' %>">
                                                    <%= listing.isAvailable ? 'Available' : 'Unavailable' %>
                                                </span>
                                            </td>
                                            <td><%= new Date(listing.createdAt).toLocaleDateString() %></td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="/listings/<%= listing._id %>" 
                                                       class="btn btn-sm btn-outline-primary" 
                                                       title="View">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/admin/listings/<%= listing._id %>/edit" 
                                                       class="btn btn-sm btn-outline-warning" 
                                                       title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form method="POST" 
                                                          action="/admin/listings/<%= listing._id %>/toggle?_method=PATCH" 
                                                          style="display: inline;">
                                                        <button type="submit" 
                                                                class="btn btn-sm btn-outline-<%= listing.isAvailable ? 'warning' : 'success' %>" 
                                                                title="<%= listing.isAvailable ? 'Mark Unavailable' : 'Mark Available' %>">
                                                            <i class="fas fa-<%= listing.isAvailable ? 'pause' : 'play' %>"></i>
                                                        </button>
                                                    </form>
                                                    <form method="POST" 
                                                          action="/admin/listings/<%= listing._id %>?_method=DELETE" 
                                                          style="display: inline;"
                                                          onsubmit="return confirm('Are you sure you want to delete this listing?')">
                                                        <button type="submit" 
                                                                class="btn btn-sm btn-outline-danger" 
                                                                title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-home fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No listings found</h4>
                            <p class="text-muted">Try adjusting your filters or create a new listing.</p>
                            <a href="/admin/listings/new" class="btn btn-success">
                                <i class="fas fa-plus"></i> Add New Listing
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>