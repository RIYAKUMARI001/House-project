<% layout('layouts/boilerplate') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">My Wishlist</h2>
            
            <% if (listings.length === 0) { %>
                <div class="text-center py-5">
                    <i class="fas fa-heart fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Your wishlist is empty</h4>
                    <p class="text-muted">Start exploring and add your favorite listings!</p>
                    <a href="/listings" class="btn btn-primary">Browse Listings</a>
                </div>
            <% } else { %>
                <div class="row">
                    <% listings.forEach(listing => { %>
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <% if (listing.images && listing.images.length > 0) { %>
                                    <img src="<%= listing.images[0].url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 200px; object-fit: cover;">
                                <% } else { %>
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="fas fa-home fa-3x text-muted"></i>
                                    </div>
                                <% } %>
                                
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title"><%= listing.title %></h5>
                                    <p class="card-text text-muted">
                                        <i class="fas fa-map-marker-alt"></i> <%= listing.location %>, <%= listing.country %>
                                    </p>
                                    <p class="card-text">
                                        <small class="text-muted"><%= listing.description.substring(0, 100) %>...</small>
                                    </p>
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="h5 mb-0">$<%= listing.price %>/night</span>
                                            <div>
                                                <a href="/listings/<%= listing._id %>" class="btn btn-primary btn-sm">View</a>
                                                <form action="/wishlist/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                                        <i class="fas fa-heart-broken"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </div>
</div>